<Window x:Class="JewelryStore.Desktop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelryStore.Desktop.Views"
        mc:Ignorable="d"
        Title="Налаштування" Height="300" Width="800" MinWidth="800" MinHeight="300"
        Loaded="SettingsWindow_OnLoaded" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Label" x:Key ="BaseLabel">
            <Setter Property="FontWeight" Value = "Bold"/>
        </Style>

        <Style TargetType="Button" x:Key ="BaseButton">
            <Setter Property="FontWeight" Value = "Bold" />
            <Setter Property="Padding" Value = "5,2"/>
            <Setter Property="FontSize" Value = "25"/>
            <Setter Property="Margin" Value = "2 1"/>
        </Style>

        <Style TargetType="TextBox" x:Key="BaseTextBox">
            <Setter Property="FontWeight" Value = "Regular" />
            <Setter Property="Padding" Value = "5,2"/>
            <Setter Property="FontSize" Value = "25"/>
            <Setter Property="Margin" Value = "5"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="BaseComboBox">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Padding" Value = "5,2"/>
            <Setter Property="FontSize" Value = "25"/>
            <Setter Property="Margin" Value = "2 1"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" 
                   Grid.Column="0" 
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="5"
                   FontFamily="Calibri"
                   FontSize="22"
                   FontWeight="Bold"
                   Text="Ціна грама за працю:" />

        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 VerticalAlignment="Center"
                 Margin="5"
                 FontFamily="Calibri"
                 FontSize="22"
                 FontWeight="Bold" 
                 x:Name="PricePerGramWorkTb" />

        <TextBlock Grid.Row="1" 
                   Grid.Column="0" 
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="5"
                   FontFamily="Calibri"
                   FontSize="22"
                   FontWeight="Bold"
                   Text="Ціна грама за продаж:" />

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 VerticalAlignment="Center"
                 Margin="5"
                 FontFamily="Calibri"
                 FontSize="22"
                 FontWeight="Bold" 
                 x:Name="PricePerGramSaleTb" />

        <Button Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2" 
                Content="Зберегти ціну"
                Height="40"
                Margin="5"
                FontFamily="Calibri"
                FontSize="24"
                FontWeight="Bold" 
                Click="ButtonBase_OnClick" />
        
        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <ComboBox Grid.Column="0" Name="cbOpen"  Style="{StaticResource BaseComboBox}" RenderTransformOrigin="0.5,0.5" />
            <Button Grid.Column="1" Style ="{StaticResource BaseButton}" Name ="openBtn" Content="Перейти" Click="OpenFromCbWindowBtn_Clicked"/>
        </Grid>
    </Grid>
</Window>
