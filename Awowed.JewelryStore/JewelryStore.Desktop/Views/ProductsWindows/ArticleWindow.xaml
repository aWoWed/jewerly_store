            <StackPanel Grid.Row="7" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource BaseTextBlock}">Дата</TextBlock>
                    <TextBox x:Name="TbDate"
                             Width="Auto"
