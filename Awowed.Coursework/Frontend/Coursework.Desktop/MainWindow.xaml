                   FontSize="14"
                   TextAlignment="Center">
            Все изделия
        </TextBlock>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <ui:JewerlyItem TextBlockContent="12" />
                <ui:JewerlyItem TextBlockContent="25" />
